<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/sira1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BEDEN KITLE HESAPLAMA"
            android:textColor="#000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/sira2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sira1"
            android:gravity="center"
            android:text="UYGULAMASINA"
            android:textColor="#000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/sira3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sira2"
            android:gravity="center"
            android:text="HOŞGELDİNİZ!"
            android:textColor="#000"
            android:textSize="24dp" />

        <Button
            android:id="@+id/butonAnasayfa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sira3"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_green_dark"
            android:text="Uygulamaya Devam Et" />


    </RelativeLayout>


</LinearLayout>